{
  "name": "@celaya-solutions/parachain-devtools",
  "version": "1.0.0",
  "description": "Development tools for C-Suite Parachain - pretty log viewer, replay tools, and test harness",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run src/log-viewer.js",
    "logs": "bun run src/log-viewer.js",
    "replay": "bun run src/consensus-replay.js",
    "test-harness": "bun run src/test-harness.js",
    "build": "bun build src/log-viewer.js --outdir=dist --target=node",
    "start": "node dist/log-viewer.js"
