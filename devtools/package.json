    "moment": "^2.30.1",
    "tail": "^2.2.6",
    "chokidar": "^3.5.3",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "boxen": "^7.1.1",
    "gradient-string": "^2.0.2",
    "figlet": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "substrate",
    "polkadot",
    "parachain",
    "blockchain",
    "development",
    "logging",
    "consensus",
    "agents"
